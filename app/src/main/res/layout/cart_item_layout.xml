<?xml version="1.0" encoding="utf-8"?>
<layout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>
    <variable
        name="keranjang"
        type="com.kelompokbpbp.projecttugasbesarkelompokbrestaurant.model.Keranjang"/>
</data>

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    tools:context=".CartAdapter">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:loadImg="@{keranjang.fotoMenu}"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_produk_name"
                android:text="@{keranjang.namaMakanan}"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_produk_harga"
                    android:text="@{keranjang.harga}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

<!--                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton-->
<!--                    android:id="@+id/txt_jumlah"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_width="80dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:layout_marginLeft="220dp"-->
<!--                    app:initialNumber="1"-->
<!--                    app:finalNumber="100"-->
<!--                    app:backGroundColor="@color/bottom"-->
<!--                    app:textColor="@color/colorPrimaryDark">-->
<!--                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
</layout>